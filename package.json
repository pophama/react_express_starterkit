{
    "name": "mern_shopping_list",
    "version": "1.0.0",
    "description": "Shopping list built with the MERN stack",
    "main": "app.min.js",
    "scripts": {
        "server": "nodemon --ignore app.min.js --exec npm run build-dev-server",
        "build-dev-server": "webpack --progress --mode development && npm run start",
        "build": "webpack -p --progress --mode development --hide-modules",
        "postinstall": "yarn run build",
        "start": "node app.min.js",
        "client": "npm start --prefix client",
        "dev": "concurrently \"npm run server\" \"npm run client\"",
        "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix client && npm run build --prefix client"
    },
    "author": "Brad Traversy",
    "license": "MIT",
    "dependencies": {
        "bcryptjs": "^2.4.3",
        "concurrently": "^3.6.0",
        "config": "^3.0.1",
        "express": "^4.17.3",
        "jsonwebtoken": "^8.5.0",
        "mongoose": "^5.1.6",
        "npm-run-all": "^4.1.5",
        "webpack-node-externals": "^1.7.2"
    },
    "devDependencies": {
        "@babel/core": "^7.4.5",
        "@babel/preset-env": "^7.4.5",
        "babel-loader": "8.0.5",
        "html-webpack-plugin": "^3.2.0",
        "nodemon": "^1.17.5",
        "webpack": "4.28.3",
        "webpack-cli": "^3.3.4"
    }
}